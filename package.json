{
  "name": "eslint-config-popcorn",
  "version": "0.0.10",
  "description": "Eslint configuration for using ESLint, TypeScript, Airbnb's ESLint config and Prettier together for Node.js",
  "author": "JP Wesselink <jpwesselink@gmail.com>",
  "homepage": "https://github.com/jpwesselink/eslint-config-popcorn#readme",
  "license": "UNLICENSED",
  "keywords": [
    "eslint",
    "typescript",
    "airbnb",
    "prettier"
  ],
  "directories": {
    "test": "__tests__"
  },
  "bin": {
    "pt": "./bin/install-peerdeps.js"
  },
  "files": [
    "index.js",
    "javascript.js",
    "typescript.js",
    "typescript-react.js",
    "rules",
    "scripts",
    "tsconfig.json"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jpwesselink/eslint-config-popcorn.git"
  },
  "scripts": {
    "postinstall": "node ./scripts/check-for-update.js",
    "test": "eslint --ext .js,ts,tsx __tests__"
  },
  "bugs": {
    "url": "https://github.com/jpwesselink/eslint-config-popcorn/issues"
  },
  "dependencies": {
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-unused-imports": "^1.1.3",
    "minimal-cli-parser": "^0.1.0",
    "update-notifier": "^5.1.0"
  },
  "peerDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.7.0",
    "@typescript-eslint/parser": "^4.7.0",
    "eslint": "7.2.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-import-resolver-typescript": "^2.4.0",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "prettier": "^2.3.2",
    "typescript": "^4.3.5"
  },
  "devDependencies": {
    "@types/node": "^16.6.1",
    "@types/react": "^17.0.18",
    "@typescript-eslint/eslint-plugin": "^4.7.0",
    "@typescript-eslint/parser": "^4.7.0",
    "eslint": "7.2.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-import-resolver-typescript": "^2.4.0",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "prettier": "^2.3.2",
    "react": "^17.0.2",
    "typescript": "^4.3.5"
  },
  "installPeerDeps": {
    "common": [
      "eslint",
      "prettier"
    ],
    "javascript": [],
    "typescript": [
      "@typescript-eslint/eslint-plugin",
      "@typescript-eslint/parser",
      "eslint-import-resolver-typescript",
      "typescript"
    ],
    "typescript-react": [
      "@typescript-eslint/eslint-plugin",
      "@typescript-eslint/parser",
      "eslint-config-airbnb",
      "eslint-plugin-jsx-a11y",
      "eslint-plugin-react",
      "eslint-plugin-react-hooks",
      "eslint-import-resolver-typescript",
      "typescript"
    ]
  }
}
